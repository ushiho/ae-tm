{% extends 'vehicle_type_form/vehicleTypeBase.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
{% block path %}
{{ parent() }}
    <div class="panel-heading main-color-bg">
    <h3 class="panel-title">
    <a class="path" href="{% if type.id == null %}{{ path('addType') }} {% else %}{{path('editType', {'id': type.id })}}{% endif %}">
           {% if type.id == null %}Create Type{% else %}Edit Type{% endif %}</a></h3></div>
{% endblock %}
{{ form_start(form) }}

    <div class="panel-body">
    <div class="container-fluid table-responsive">
        <br>
        <table class="listing form table table-striped table-hover" >
                <tr>
                    <th>
                    <th class="full" colspan="2">Enter Vehicle Type information</th>
                    </th>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.name) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.name) }}</td>
                </tr>
            </table>
    <div class="btn-group btn-group-justified ">
        <div class="btn-group">
            <button href="{{ path('allTypes') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" formnovalidate> Back</button>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil">{% if type.id %}Update{% else %}Create{% endif %}</button>
        </div>
    </div>
    </div>
    </div>

        {{ form_end(form) }}
{% endblock %}