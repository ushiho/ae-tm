{% extends 'base.html.twig' %}

{% block content %}


    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Invoice creation<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
            <div class="heading-elements">
                <a href="{{ path('project_index') }}" class="btn btn-primary btn-xs "><b><i class="icon-loop3"></i></b> Back to list</a>
            </div>
        </div>
        <div class="panel-body">
            <p class="content-group-lg"></p>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            <br />
            <div class="text-right">
                <button type="submit" class="btn btn-primary legitRipple">Validate <i class="icon-arrow-right14 position-right"></i></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
