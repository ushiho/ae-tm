{% extends 'vehicle/vehicleBase.html.twig' %}
{% block center_column %}
    {% block path %}

    {% endblock %}

    <div class="panel-body">

        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">{{ vehicle.matricule }} Details</h3>
        </div>

        <br>

        <div class="table-responsive">
        <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                    <tr class="bg">
                        <td class="first" width="172"><strong>Brand</strong></td>
                        <td class="last">{{ vehicle.brand }}</td>
                    </tr>
                    <tr class="bg">
                        <td class="first"><strong>Matricule</strong></td>
                        <td class="last">{{ vehicle.matricule }}</td>
                    </tr>
                    <tr class="bg">
                        <td class="first"><strong>Type</strong></td>
                        <td class="last">{{ vehicle.type.name }}</td>
                    </tr>
                    <tr>
                        <td class="first"><strong>State</strong></td>
                        <td class="last">{% if vehicle.state == 1 %}New{% elseif vehicle.state == 2 %}Good Condition{% else %}Bad Condition{% endif %}</td>
                    </tr>
                    <tr class="bg">
                        <td class="first"><strong>Rent Info</strong></td>
                        <td class="last">
                        {% if vehicle.allocate and vehicle.allocate is not empty %}
                        <a href="{{ path('showRent', {'idRent':vehicle.allocate.id}) }}" class="link">Show Rent's Info</a></td>
                        {% else %}
                        <a href="{{ path('addRent') }}" class="link">Add Rent's Info</a></td>
                        {% endif %}                        
                    </tr>
                    </table>
    </div>

        <div class="btn-group btn-group-justified">
            <a title="Show All Missions" href="{{ path('allVehicles') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left">  Back </a>
            {% if connectedUser.role == 1 %}
            <a title="Edit This Mission" href="{{ path('editVehicle', { 'id' : vehicle.id }) }}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil">  EDIT </a>
            {% endif %}
        </div>

    </div>


{% endblock %}