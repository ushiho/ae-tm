{% extends 'vehicle/vehicleBase.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
{% block path %}
{{ parent() }}
    <div class="panel-heading main-color-bg">
    <h3 class="panel-title"><a class="path" href="{% if vehicle.id == null %}{{ path('addVehicle') }} {% else %}{{path('editVehicle', {'id': vehicle.id })}}{% endif %}">
              {% if vehicle.id == null %}Create Vehicle{% else %}Edit Vehicle{% endif %}</a></h3></div>
{% endblock %}
{{ form_start(form) }}
        <div class="table">
    <div class="panel-body">
    <div class="container-fluid table-responsive">
        <br>
        <table class="listing form table table-striped table-hover" >
            <th>
            <th class="full" colspan="4">Enter Vehicle information</th>
            </th>

                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.matricule) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.matricule, {'attr' : 
                    {'placeholder':'Matricule', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.state) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.state) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.type) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.type, {'attr' : 
                    {'placeholder':'Vehicle Type', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.brand) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.brand, {'attr' : 
                    {'placeholder':'Vehicle Brand', 'class':'text' }}) }}</td>
                </tr>
            </table>
    <div class="btn-group btn-group-justified ">
    <div class="btn-group">
        <button class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" formnovalidate href="{{ path('allVehicles') }}" >  Back</button>
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil">  {% if vehicle.id %}Update{% else %}Create{% endif %}</button>
    </div>
    </div>
    {{ form_end(form) }}
{% endblock %}