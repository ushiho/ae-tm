                            <strong>
                                {{ form_label(form.secondDate) }}                            
                            </strong>
                        </td>
                        <td class="last" width="172">{{ form_widget(form.secondDate, {'attr' :
                        {'placeholder':'Total Amount', 'class':'text' }}) }}</td>
                    </tr>
                    <tr>
                        <td class="first" width="150">
                            <strong>
                    {{ form_label(form.department) }}                            
                            </strong>
                        </td>
                        <td class="last" width="172">{{ form_widget(form.department, {'attr' :
