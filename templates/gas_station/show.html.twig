{% extends 'base.html.twig' %}

{% block mission_class %}class="active"{% endblock %}
{% block header %}
    Gaz Station
{% endblock %}
{% block header_annex %}
    <li><a href="index.html">Home</a></li>
    <li class="active">Gaz Station</li>
{% endblock %}

{% block left_column %}
    <a href="{{path('addGasStation')}}" class="list-group-item"><span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span> Create Gaz Station</a>
    <a href="{{path('allGasStation')}}" class="list-group-item"><span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span> Show all Gaz Station</a>
{% endblock %}

{% block center_column %}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Gaz Station</h3>
    </div>
    <br>
    <div class="panel-body">
    {% if app.session.flashBag.has('gasStationMsg') %}
        <div class="alert alert-success error">
            {% for msg in app.session.flashBag.get('gasStationMsg') %}
                <strong>{{ msg }}</strong>
            {% endfor %}
        </div>
    {% endif %}
        <a title="Add new Gaz Station" href="{{path('addGasStation')}}" class="btn-group-justified btn-primary btn-xs ">ADD NEW </a>
        <br>
        <div class="table-responsive">

        <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                        <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ gasStation.name }}</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>{% if gasStation.phone or gasStation.phone is empty %}----------------{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{% if gasStation.address or gasStation.address is empty %}----------------{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="heading-elements pull-right">
                <div class="col-md-12">
                    <div class="text-right">
                        <div class="btn-group">
                            <a class="btn btn-primary legitRipple" href="{{ path('editGasStation', { 'id': gasStation.id }) }}">Edit<i class="icon-rotate-cw2 position-right"></i></a>
                            <a onclick="return confirm('Are you sure that you want to delete this item?');"  class="btn btn-danger legitRipple" href="{{ path('deleteGasStation', { 'id': gasStation.id }) }}">Delete <i class="icon-trash-alt position-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
