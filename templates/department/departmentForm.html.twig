{{ form_start(form) }}
    <div class="panel-body">
    <div class="container-fluid table-responsive">
    <br>
        <table class="listing form table table-striped table-hover" >
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.name) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.name, {'attr' : 
                    {'placeholder':'Department Name', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.adress) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.adress, {'attr' : 
                    {'placeholder':'Department adress', 'class':'text' }}) }}</td>
                </tr>
            </table>
        <br>
        {{ form_end(form) }}
    <div class="btn-group btn-group-justified ">
        <div class="btn-group">
            <button class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('allDepartments') }}" formnovalidate> Cancel</button>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil">{% if department.id %} Update{% else %} Create{% endif %}</button>
        </div>
    </div>

{% endblock %}