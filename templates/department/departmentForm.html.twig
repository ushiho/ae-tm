{% block path %}
{{ parent() }}
<div class="panel-heading main-color-bg">
    <h3 class="panel-title"><a class="path" href="{% if department.id == null %}{{ path('addDepartment') }} {% else %}{{path('editDepartment', {'id': department.id })}}{% endif %}">
