{% extends 'supplier/supplierBase.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
{% block path %}
{{ parent() }}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">
            <a class="path"
               href="{% if supplier.id == null %}{{ path('addSupplier') }}
                    {% else %}{{path('editSupplier', {'id': supplier.id })}}
                    {% endif %}">
                    {% if supplier.id == null %}Create Supplier{% else %}Edit Supplier{% endif %}
            </a></h3>
    </div>

{% endblock %}
{{ form_start(form) }}
    <div class="panel-body">
    <div class="container-fluid table-responsive">
        <br>
            <table class="listing form table table-striped table-hover" >
                <tr>
                    <th class="full" colspan="2">Enter Supplier information</th>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.firstName) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.firstName, {'attr' : 
                    {'placeholder':'First Name', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.lastName) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.lastName, {'attr' : 
                    {'placeholder':'Last Name', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.email) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.email, {'attr' : 
                    {'placeholder':'Email', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.phoneNumber) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.phoneNumber, {'attr' : 
                    {'placeholder':'Phone Number', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.adress) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.adress, {'attr' : 
                    {'placeholder':'Address', 'class':'text' }}) }}</td>
                </tr>
            </table>
        </div>
    <div class="btn-group btn-group-justified ">
        <div class="btn-group">
            <button class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('allSuppliers') }}" formnovalidate> Cancel </button>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil"> {% if supplier.id %}Update{% else %}Create{% endif %}</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}