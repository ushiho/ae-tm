{% extends 'user/userBase.html.twig' %}

{% block center_column %}

{% block path %}
    {#{{ parent()}} / <a href="{{ path('profil') }}" class="path">Profil</a>#}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title"> <a href="{{ path('profil') }}" class="path" class="panel-title">{{ connectedUser.firstname }}'s Profil </a></h3>
    </div>
{% endblock %}

    <div class="panel-body">

        <br>
        <div class="table-responsive">
            <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr>
                    <td class="first" width="172"><strong>First Name</strong></td>
                    <td class="last">{{ connectedUser.firstName }}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Last Name</strong></td>
                    <td class="last">{{ connectedUser.lastName}}</td>
                </tr>
                <tr>
                    <td class="first"><strong>CIN</strong></td>
                    <td class="last">{{ connectedUser.cin}}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Birthday</strong></td>
                    <td class="last">{{ connectedUser.birthday|date('d-m-Y')}}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Email</strong></td>
                    <td class="last">{{ connectedUser.email }}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Phone Number</strong></td>
                    <td class="last">{{ connectedUser.phoneNumber }}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Gender</strong></td>
                    <td class="last">{% if connectedUser.gender == 1 %}Female
                        {% elseif connectedUser.gender == 2 %}Male{% else %} Not defined {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Country</strong></td>
                    <td class="last">{{ connectedUser.country }}</td>
                </tr>
                <tr class="bg">
                    <td class="first"><strong>Role</strong></td>
                    <td class="last">{% if connectedUser.role == 1 %}Admin
                        {% elseif connectedUser.role == 2 %} User{% else %} Not defined{% endif %} </td>
                </tr>
            </table>
        </div>
        <div class="btn-group btn-group-justified">
            <a title="Show All Users" href="{{ path('allUsers') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left">  Back  </a>
            <a title="Edit my profil" href="{{ path('editUser', { 'id' : connectedUser.id }) }}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil">  EDIT  </a>
        </div>

    </div>
{% endblock %}
