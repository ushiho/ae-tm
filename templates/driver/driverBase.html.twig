{% extends 'base.html.twig' %}

{% block header %}
    <li><span><span><a href="{{ path('allProjects') }}">Projects</a></span></span></li>
    <li><span><span><a href="{{path('allMissions')}}">Missions</a></span></span></li>
    <li><span><span><a href="{{path('allRents')}}">Rent</a></span></span></li>
    <li><span><span><a href="{{path('allSuppliers')}}">Suppliers</a></span></span></li>
    <li><span><span><a href="{{path('allDepartments')}}">Departments</a></span></span></li>
    <li class="active"><span><span><a href="{{path('allDrivers')}}">Drivers</a></span></span></li>
    <li><span><span><a href="{{path('allVehicles')}}">Vehicles</a></span></span></li>
    <li><span><span><a href="{{path('allTypes')}}">Vehicles Type</a></span></span></li>
    <li><span><span><a href="{{path('allPayments')}}">Payments</a></span></span></li>
    {% if connectedUser.role == 1 %}
    <li><span><span><a href="{{path('allUsers')}}">Users</a></span></span></li>
    {% endif %}
{% endblock %}
{% block left_column %}
    <h3>DRIVERS MANAGMENT</h3>
                <a href="{{ path('addDriver') }}" class="link">Add Driver</a>
                <a href="{{ path('allDrivers') }}" class="link">Show all Drivers</a>
{% endblock %}

{% block center_column  %}
    <div class="top-bar"> <a title="Add new Driver" href="/driver/new" class="button">ADD NEW </a>
        <h1>Contents</h1><br>
        <div class="breadcrumbs">
        {% block path %}
        <a class="path" href="/driver">Drivers</a>
        {% endblock %}
        </div>
    </div>
    <br>
        <hr>
         <div class="error"> 
            <strong>{% if app.session.flashBag.has('driverError') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('driverError') %}
                    {{ msg }}
                {% endfor %}
            </div>{% endif %}</strong>
        </div>
        <br>
    <div class="table"> <img src="{{ asset('img/bg-th-left.gif') }}" width="8" height="7" alt="" class="left" /> <img src="{{ asset('img/bg-th-right.gif') }}" width="7" height="7" alt="" class="right" />
        <table class="listing" cellpadding="0" cellspacing="0">
        {% if drivers is empty or drivers is null %}
                <tr class="bg">
                    <td class="first" style="text-align:center;font-weight: bold;">There is no driver add one <a href="/driver/new" style="color:red;text-decoration: underline black;">here</a></td>
                </tr>
            {% else %}
            <tr>
                <th class="first">Firstname</th>
                <th>Lastname</th>
                <th>CIN</th>
                <th>Licence Number</th>
                <th>Actions</th>
            </tr>
            <tbody id="driver">
            {% for driver in drivers %}
                <tr class="bg">
                    <td class="first">{{ driver.firstname }}</td>
                    <td class="first">{{ driver.lastname }}</td>
                    <td class="first">{{ driver.cin }}</td>
                    <td class="first">{{ driver.licenceNumber }}</td>
                    <td>
                    <a href="{{ path('deleteDriver', {'id': driver.id}) }}" onclick="return confirm('Are u sure, You want to delete this Driver?')">
                    <img src="{{ asset('img/hr.gif') }}" width="16" height="16" title="Delete" /></a>
                    <a href="{{ path('editDriver', {'id': driver.id}) }}" onclick="return confirm('Are u sure, You want to delete this Driver?')">
                    <img src="{{ asset('img/edit-icon.gif') }}" width="16" height="16" title="Edit" /></a>
                    <a href="{{ path('showDriver', {'id': driver.id}) }}"><img src="{{ asset('img/arrow.gif') }}" width="16" height="16" title="Details" /></a>
                    {% if driver.busy == false %}             
                    <a href="{{ path('addMissionToDriver', {'id': driver.id}) }}"><img src="{{ asset('img/add-icon.gif') }}" width="16" height="16" title="Add a missin to this driver" /></a>
                    {% endif %}              
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            {% endif %}
        </table>
    </div>
{% endblock %}
