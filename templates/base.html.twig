<!DOCTYPE html>
<html>

<head>
    {% block metas %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet"> 
    {% endblock %}
    <title>{% block title %}AE-TM{% endblock %}</title>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    {% block stylesheets %}{% endblock %}


</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {% if connectedUser.role != 3 %}
                    <li {% block projet_class %}{% endblock %}><a href="{{ path('allProjects') }}">Projet</a></li>
                    <li {% block mission_class %}{% endblock %}><a href="{{path('allMissions')}}">Missions</a></li>
                    <li {% block rent_class %}{% endblock %}><a href="{{path('allRents')}}">Rent</a></li>
                    <li {% block suppliers_class %}{% endblock %}><a href="{{path('allSuppliers')}}">Suppliers</a></li>
                    <li {% block departement_class %}{% endblock %}><a href="{{path('allDepartments')}}">Departements</a></li>
                    <li {% block driver_class %}{% endblock %}><a href="{{path('allDrivers')}}">Drivers</a></li>
                    <li {% block vehicles_class %}{% endblock %}><a href="{{path('allVehicles')}}">Vehicles</a></li>
                    <li {% block vehicleType_class %}{% endblock %}><a href="{{path('allTypes')}}">Vehicles Type </a></li>
                    <li {% block payment_class %}{% endblock %}><a href="{{path('allPayments')}}">Payments</a></li>
                    {% if connectedUser.role == 1 %}
                    <li {% block user_class %}{% endblock %}><a href="{{path('allUsers')}}">Users</a></li>
                    {% endif %}
                    {% endif %}
                    {% if connectedUser.role != 2 %}
                    <li><a href="{{path('all_fuel_reconciliation')}}">Reconciliations</a></li>
                    <li><a href="{{path('invoice_index')}}">Fuel Invoice</a></li>
                    <li><a href="{{path('allGasStation')}}">Gaz Station</a></li>
                    {% endif %}
                    <br>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('profil') }}">Welcome, {{ connectedUser.firstname }}</a></li>
                        <li><a href="{{path('logout') }}">Logout</a></li>
                    </ul>
                </ul>
            </div>
        </div>
    </nav>
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        {% block header %}

                        {% endblock %}
                        <small> Management</small>
                    </h1>
                </div>
            </div>
        </div>
    </header>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                {% block header_annex %}

                {% endblock %}
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="#" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Sub Menu
                        </a>
                        {% block left_column %}

                        {% endblock %}
                    </div>
                </div>
                <div class="col-md-9">
                    <!-- Website Overview -->
                    <div class="panel panel-default">

                        {% block center_column %}

                        {% block center_column_content %}

                        {% endblock %}

                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </section>



    {% block footer %}
    <footer id="footer">
        <p>Copyright Transport Management , &copy; 2019</p>
    </footer>

    {% endblock %}

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{asset('js/jquery-3.3.1.min.js')}}"></script>
    <script src="http://cdn.ckeditor.com/4.6.1/standard/ckeditor.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
    {% block javascripts %}{% endblock %}


</body>

</html>