{% extends 'project/projectBase.html.twig' %}

{% block path %}
   {# {{ parent()}} / <a href="#" class="path"> Details</a>#}
{% endblock %}
{% block center_column %}

    <div class="panel-body">
        <div class="panel-heading main-color-bg">
            <h3 class="panel-title">{{ project.name }}'s Details</h3>
        </div>
    <br>
        <div class="table-responsive">
            <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                        <tr class="bg">
                            <td class="first" width="172"><strong>Created At</strong></td>
                            <td class="last">{{ project.createdAt|date('d-m-Y H:i') }}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Start Date</strong></td>
                            <td class="last">{{ project.startDate|date('d-m-Y')}}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>End Date</strong></td>
                            <td class="last">{{ project.endDate|date('d-m-Y')}}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Name</strong></td>
                            <td class="last">{{ project.name }}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Budget (DH)</strong></td>
                            <td class="last">{{ project.budget }}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Owner</strong></td>
                            <td class="last">{{ project.owner }}</td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Missions</strong></td>
                            <td class="last">
                                {% if project.mission and project.mission is not empty %}
                                    <a href="{{ path('showMissionOfProject', {'idProject':project.id}) }}" class="link" title="Show all missions linked to this project"><strong>Show Missions</strong></a>
                                {% endif %} Or
                                    <a href="{{ path('addMissionToProject', {'id': project.id})}}" class="link" title="Add a mission"><strong>Add One</strong></a>
                            </td>
                        </tr>
                        <tr class="bg">
                            <td class="first"><strong>Is Finished?</strong></td>
                            <td class="last">{% if project.finished %}Yes{% else %}No{% endif %} </td>
                        </tr>
                        <tr class="bg">
                        <td class="first"><strong>Notes</strong></td>
                        <td class="last">{{project.note}}</td>
                        </tr>
            </table>
        </div>
                    <br>
        <div class="btn-group btn-group-justified">
            <a title="Show All Projects" href="{{ path('allProjects') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left"> Back </a>
            {% if connectedUser.role == 1 %}
            <a title="Edit This Project" href="{{ path('editProject', { 'id' : project.id }) }}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil"> EDIT </a></td>
            {% endif %}
        </div>

    </div>
{% endblock %}