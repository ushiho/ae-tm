{% extends 'project/projectBase.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
{% block path %}
{{ parent() }}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title"> <a class="path" href="{% if project.id == null %}{{ path('addProject') }} {% else %}{{path('editProject', {'id': project.id })}}{% endif %}">
                {% if project.id == null %} Create project{% else %} Edit {{ project.name }}{% endif %} </a></h3>
    </div>
{% endblock %}
{{ form_start(form) }}

    <div class="panel-body">
        <div class="container-fluid table-responsive">
            <br>
            <table class="listing form table table-striped table-hover" >
                    <tr>
                        <th class="full" colspan="2">Enter project information</th>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.name) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.name, {'attr' :
                        {'placeholder':'Project Name', 'class':'text' }}) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.owner) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.owner, {'attr' :
                        {'placeholder':'Project Owner', 'class':'text' }}) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.startDate) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.startDate, {'attr' :
                        {'placeholder':'Start Date', 'class':'text' }}) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.endDate) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.endDate, {'attr' :
                        {'placeholder':'End Date', 'class':'text' }}) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.finished) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.finished) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.budget) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.budget, {'attr' :
                        {'placeholder':'Budget DH', 'class':'text' }}) }}
                        </td>
                    </tr>
                    <tr>
                        <td class="first" width="172">
                            <strong>{{ form_label(form.note) }}</strong>
                        </td>
                        <td class="last">{{ form_widget(form.note, {'attr' :
                        {'placeholder':'Notes are here'}}) }}
                        </td>
                    </tr>
                </table>
            <br>
            {{ form_end(form) }}
            <div class="btn-group btn-group-justified ">
                <div class="btn-group">
                    <button  href="{{ path('allProjects') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left"> Back </button>
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil">{% if project.id %}Update{% else %}Create{% endif %}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}