{% extends 'payment/paymentBase.html.twig' %}

{% block center_column %}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Payments Suppliers </h3>
    </div>
    <div class="panel-body">


        <div class="table-responsive">
            <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr>
                    <th class="full text text-center" colspan="2"><strong style="font-size: large;" >DETAILS</strong></th>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Supplier</strong>
                    </td>
                    <td class="last">  <a href="{{ path('showSupplier', {'id': paymentSupplier.supplier.id }) }}" class="link" >{{ paymentSupplier.supplier.lastName }} {{ paymentSupplier.supplier.firstName }}</a> </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Payment Date</strong>
                    </td>
                    <td class="last">{{ paymentSupplier.datePayment|date('d-M-Y')}}</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Price</strong>
                    </td>
                    <td class="last">{{ paymentSupplier.price }}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                <td class="first"><strong>Total Expenses To Pay</strong></td>
                <td class="last">{{paymentSupplier.totalPriceToPay}}</td>
                </tr>
                <tr class="bg">
                    <td class="first" width="250px;">
                        <strong>Total Expenses Paid</strong>
                    </td>
                    <td class="last">{{ paymentSupplier.payment.totalPricePaidToSupplier }}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Remaining Expenses</strong>
                    </td>
                    <td class="last">{{ paymentSupplier.payment.remainigPriceToSupplier}}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Payment Info</strong>
                    </td>
                    <td class="last">
                    {% if paymentSupplier.payment %} <a href="{{path('showPayment', {'id':paymentSupplier.payment.id})}}" class="link">Show </a> {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong title="Rent Info">Rent Info</strong>
                    </td>
                    <td class="last">
                        {% if paymentSupplier.payment.mission.allocate and paymentSupplier.payment.mission.allocate is not empty %}
                            <a href="{{path('showRent', {'idRent':paymentSupplier.payment.mission.allocate.id})}}" class="link">Show</a>
                        {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Supplier Info</strong>
                    </td>
                    <td class="last">
                        {% if paymentSupplier.supplier and paymentSupplier.supplier is not empty %}
                            <a href="{{path('showSupplier', {'id': paymentSupplier.supplier.id })}}" class="link">Show</a>
                        {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Note</strong>
                    </td>
                    <td class="last">{{paymentSupplier.note}}</td>
                </tr>
            </table>
            <br>
            <div class="btn-group btn-group-justified">
                <a title="Show All payments" href="{{ path('allPaymentsSupplier') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left"> Back</a>
                <a href="{{path('editPaymentSupplier', {'id': paymentSupplier.id, 'idPayment': paymentSupplier.payment.id})}}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil" title="Edit This Payment"> Edit</a>
            </div>
            <br>
        </div>
    </div>
{% endblock %}