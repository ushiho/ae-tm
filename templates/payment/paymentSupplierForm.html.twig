{% extends 'payment/paymentBase.html.twig' %}
{% block center_column %}
<div class="top-bar">
            <h1>Contents</h1><br>
            <div class="breadcrumbs">
    {% block path %}
        {{ parent() }}
<a class="path" href="{% if paymentSupplier and paymentSupplier.id %}{{path('editSupplier', {'id': paymentSupplier.id })}}{% else %}{{ path('addSupplier') }} {% endif %}">
            /
            {% if paymentSupplier and paymentSupplier.id %}Edit PaymentSupplier{% else %}Create PaymentSupplier{% endif %}
        </a>
    {% endblock %}
    </div>
    </div>
    <br>
    <hr>
    {{ form_start(form) }}
    {% if app.session.flashBag.has('paymentSupplierMsg') %}
        <div class="alert alert-success error">
            {% for msg in app.session.flashBag.get('paymentSupplierMsg') %}
                <strong>{{ msg }}</strong>
            {% endfor %}
        </div>
    {% endif %}
    <br>
    <br>
    <div class="table">
        <img src="{{ asset('img/bg-th-left.gif') }}" width="8" height="7" alt="" class="left"/>
        <img src="{{ asset('img/bg-th-right.gif') }}" width="7" height="7" alt="" class="right"/>
        <table class="listing form" cellpadding="0" cellspacing="0">
            <tr>
                <th class="full" colspan="2">Enter Payment Supplier information</th>
            </tr>
            <tr>
                <td class="first" width="172">
                    <strong>{{ form_label(form.datePayment) }}</strong>
                </td>
                    <td class="last">{{ form_widget(form.datePayment) }}</td>
            </tr>
            <tr>
                <td class="first" width="172">
                    <strong>{{ form_label(form.price) }}</strong>
                </td>
                <td class="last">{{ form_widget(form.price) }}</td>
            </tr>
            <tr>
                <td class="first" width="172">
                    <strong>{{ form_label(form.note) }}</strong>
                </td>
                <td class="last">{{ form_widget(form.note) }}</td>
            </tr>
        </table>
        <br>
        <button type="submit" class="button">
            {% if paymentSupplier and paymentSupplier.id %}Update{% else %}Create{% endif %}
        </button>
        <button class="button" formnovalidate="formnovalidate">
            <a href="{{ path('allPaymentsSupplier') }}">Cancel</a>
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}