{% extends 'payment/paymentBase.html.twig' %}

{% block center_column %}

            {% block path %}
                <div class="panel-heading main-color-bg">
                <h3 class="panel-title">
                {{parent()}}
                    &nbsp;/&nbsp;<a class="btn-info btn-xs" href="{{path('allPaymentsDriver')}}">Payments Driver</a>&nbsp;/&nbsp;<a href="#" class="path">Details</a></h3></div>
            {% endblock %}
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr>
                    <th class="full" colspan="2">Details</th>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Payment Date</strong>
                    </td>
                    <td class="last">{{ paymentDriver.datePayment|date('d-M-Y')}}</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Days Paid</strong>
                    </td>
                    <td class="last">{{ paymentDriver.daysPaid}}&nbsp;Days</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Total Days Paid</strong>
                    </td>
                    <td class="last">{{ paymentDriver.payment.totalDaysPaid}}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Remaining Days</strong>
                    </td>
                    <td class="last">{{ paymentDriver.payment.remainingDays}}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Price</strong>
                    </td>
                    <td class="last">{{ paymentDriver.price }}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Total Expenses To Pay</strong>
                    </td>
                    <td class="last">{{paymentDriver.totalPrice}}</td>
                </tr>
                <tr class="bg">
                    <td class="first" width="250px;">
                        <strong>Total Expenses Paid</strong>
                    </td>
                    <td class="last">{{ paymentDriver.payment.totalPricePaidToDriver }}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Remaining Expenses</strong>
                    </td>
                    <td class="last">{{ paymentDriver.payment.remainingPriceToDriver}}&nbsp;DH</td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Payment Info</strong>
                    </td>
                    <td class="last">
                        {% if paymentDriver.payment %}
                            <a href="{{path('showPayment', {'id':paymentDriver.payment.id})}}" class="link">Show
                            </a>
                        {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong title="Rent Info">Mission Info</strong>
                    </td>
                    <td class="last">
                        {% if paymentDriver.payment.mission and paymentDriver.payment.mission is not empty %}
                            <a href="{{path('showMission', {'id':paymentDriver.payment.mission.id})}}" class="link">Show</a>
                        {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Driver Info</strong>
                    </td>
                    <td class="last">
                        {% if paymentDriver.driver and paymentDriver.driver is not empty %}
                            <a href="{{path('showDriver', {'id': paymentDriver.driver.id })}}" class="link">Show</a>
                        {% endif %}
                    </td>
                </tr>
                <tr class="bg">
                    <td class="first">
                        <strong>Note</strong>
                    </td>
                    <td class="last">{{paymentDriver.note}}</td>
                </tr>
            </table>
            <br>
            <div class="btn-group btn-group-justified">
                <a title="Show All payments" href="{{ path('allPaymentsDriver') }}" class="btn btn-success btn-xs glyphicon glyphicon-arrow-left"> Back</a>
                <a href="{{path('editPaymentDriver', {'id': paymentDriver.id, 'idPayment': paymentDriver.payment.id})}}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil" title="Edit This Payment"> Edit</a>
            </div>
        </div>
    </div>

{% endblock %}
