{% extends 'base.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% block stylesheets %}

{% endblock %}

{% block header %}
            <li><span><span><a href="{{path('allProjects')}}">Projects</a></span></span></li>
            <li class="active"><span><span><a href="{{path('allMissions')}}">MISSIONS</a></span></span></li>
            <li><span><span><a href="#">Rent</a></span></span></li>
            <li><span><span><a href="#">Drivers</a></span></span></li>
            <li><span><span><a href="#">Vehicles</a></span></span></li>
            <li><span><span><a href="#">Payments</a></span></span></li>
            {% if connectedUser.role == 1 %}
            <li><span><span><a href="{{ path('allUsers') }}">Users</a></span></span></li>
            {% endif %}
{% endblock %}

{% block left_column %}
    <h3>MISSIONS MANAGMENT</h3>
    <a href="{{path('addProject')}}" class="link">Create Mission</a>
    <a href="{{path('allMissions')}}" class="link">Show all missions</a>
    <a href="{{path('projectCalendar')}}" class="link">Calendrier</a>
    <a href="#" class="link">Export data</a>
{% endblock %}
{% block center_column %}
<div class="top-bar"> <a title="Add new Mission" href="/mission/new" class="button">ADD NEW </a>
        <h1>Contents</h1><br>
        <div class="breadcrumbs">
        {% block path %}
        <a class="path" href="/mission">Missions</a>
        {% endblock %}
        </div>
    </div>
    <br>
    <br>
    <div class="table"> 
    <img src="{{ asset('img/bg-th-left.gif') }}" width="8" height="7" alt="" class="left" /> <img src="{{ asset('img/bg-th-right.gif') }}" width="7" height="7" alt="" class="right" />
        <table class="listing" cellpadding="0" cellspacing="0">
            <tr>
                <th class="first">Created At</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Driver</th>
                <th>Department</th>
                <th>Project</th>
                <th>Payment</th>
                <th>Rent</th>
                <th>Notes</th>
                <th class="last">Actions</th>
            </tr>
            {% for mission in missions %}
            <tr class="bg">
                <td class="first">{{ mission.createdAt|date('d-m-Y H:i') }}</td>
                <td class="first">{{ mission.startDate|date('d-m-Y') }}</td>
                <td class="first">{{ mission.endDate|date('d-m-Y') }}</td>
                <td class="first">{{ mission.driver.name }}</td>
                <td class="first">{{ mission.department.name }}</td>
                <td class="first">{{ mission.project.name }}</td>
                <td class="first">
                {% if mission.payment is empty or mission.payment == null %}Add
                {% else %}Show{% endif %}
                </td>
                <td class="first">
                {% if mission.allocate == null or mission.allocate is empty %} Add Rent
                {% else %} Show Rents {% endif %}
                </td>
                <td class="first">{{ mission.note }}</td>
                <td>
                <a href="{{ path('deleteProject', {'id': mission.id}) }}"><img src="{{ asset('img/hr.gif') }}" width="16" height="16" title="Delete" /></a>
                <a href="{{ path('editProject', {'id': mission.id}) }}"><img src="{{ asset('img/edit-icon.gif') }}" width="16" height="16" title="Edit" /></a>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
