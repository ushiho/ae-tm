{% extends 'mission/missionBase.html.twig'  %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title"><a title="Add new Mission" href="{{path('addMission')}}" class="button">ADD NEW
            </a></h3>
    </div>
{% block path %}
{{ parent() }}



{% endblock %}

{{ form_start(form) }}
    <div class="panel-body">

        <div class="error">
            <strong>{% if app.session.flashBag.has('driverError') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('driverError') %}
                    {{ msg }}
                {% endfor %}
            </div>{% endif %}</strong>
        </div>
    <div class="container-fluid table-responsive">
        <h3 class="panel-title">
            <a class="btn-info btn-xs" href="#"> Step One: Create the driver</a></h3>
        <br>
        <table class="listing form table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr>
                    <th>
                    <th class="full" colspan="2">Enter driver information</th></th>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.firstName) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.firstName, {'attr' : 
                    {'placeholder':'First Name', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.lastName) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.lastName, {'attr' : 
                    {'placeholder':'Last Name', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.cin) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.cin, {'attr' : 
                    {'placeholder':'CIN', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.licenceNumber) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.licenceNumber, {
                        'attr' : {'placeholder':'Licence Number', 'class':'text',}}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.vehicleType) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.vehicleType)}}</td>
                </tr>
                <tr>
                    <td class="first"><strong>{{ form_label(form.periodOfTravel) }}</strong></td>
                    <td class="last">{{ form_widget(form.periodOfTravel) }}</td>
                </tr>     
                <tr>
                    <td class="first"><strong>{{ form_label(form.salaire) }}</strong></td>
                    <td class="last">{{ form_widget(form.salaire, {
                        'attr' : {'placeholder':'salary for this period', 'class':'text'}
                    }) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.numberPhone) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.numberPhone, {
                        'attr' : {'placeholder':'Phone Number', 'class':'text',}})}}</td>
                </tr>

            </table>
            <br>
        <div class="btn-group btn-group-justified ">
            <div class="btn-group">
                <a class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('cancelStepOne') }}" > Cancel</a>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary  btn-xs glyphicon glyphicon-pencil" > Next</button>
            </div>
        </div>
    </div>
</div>
        {{ form_end(form) }}
{% endblock %}
