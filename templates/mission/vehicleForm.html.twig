{% extends 'mission/missionBase.html.twig'  %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title button">Step Two: Create Vehicle</h3>
    </div>



{% block path %}
{{ parent() }}

{% endblock %}
<div class="panel-body">

        <div class="error">
            <strong>{% if app.session.flashBag.has('vehicleError') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('vehicleError') %}
                    {{ msg }}
                {% endfor %}
            </div>{% endif %}</strong>
        </div>
    <div class="container-fluid table-responsive">
        <br>

    <div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
        Search For Vehicle</a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse in">
      <div class="panel-body">
        {{ form_start(searchForm) }}
        <table class="listing form table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr class='first'>
                    <td>
                    {{ form_widget(searchForm.matricule) }}
                    </td>
                </tr>
        </table>
        <div class="btn-group btn-group-justified ">
                <div class="btn-group">
                    <a class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('stepOne') }}" >     Back</a>
                </div>
            <div class="btn-group">
                <button type="submit"class="btn btn-primary  btn-xs glyphicon glyphicon-pencil"> Next</button>
            </div>
        </div>
            {{ form_end(searchForm) }}
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
        Create Vehicle</a>
      </h4>
    </div>
    <div id="collapse2" class="panel-collapse collapse">
      <div class="panel-body">
            {{ form_start(form) }}
        <table class="listing form table table-striped table-hover" cellpadding="0" cellspacing="0">
            <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.matricule) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.matricule, {'attr' : 
                    {'placeholder':'Matricule', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.image) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.image) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.type)}}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.type, {'attr' : 
                    {'placeholder':'Vehicle Type', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.brand) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.brand, {'attr' : 
                    {'placeholder':'Vehicle Brand', 'class':'text' }}) }}</td>
                </tr>
        </table>
        <div class="btn-group btn-group-justified ">
                <div class="btn-group">
                    <a class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('stepOne') }}" >     Back</a>
                </div>
            <div class="btn-group">
                <button type="submit"class="btn btn-primary  btn-xs glyphicon glyphicon-pencil"> Next</button>
            </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>

</div>

{% endblock %}