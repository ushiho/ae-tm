{% extends 'mission/missionBase.html.twig'  %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block center_column %}
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">
    <a title="Add new Mission" href="{{path('addMission')}}" class="button">ADD NEW
    </a></h3>
    </div>



{% block path %}
{{ parent() }}

{% endblock %}
{{ form_start(form) }}
<div class="panel-body">

        <div class="error">
            <strong>{% if app.session.flashBag.has('vehicleError') %}
            <div class="alert alert-success">
                {% for msg in app.session.flashBag.get('vehicleError') %}
                    {{ msg }}
                {% endfor %}
            </div>{% endif %}</strong>
        </div>
    <div class="container-fluid table-responsive">
        <h3 class="panel-title">
            <a class="btn-info btn-xs" href="#" >Step Two: Create Vehicle</a></h3>
        <br>
        <table class="listing form table table-striped table-hover" cellpadding="0" cellspacing="0">
                <tr>
                    <th>
                    <th class="full" colspan="2">Enter Vehicle information</th>
                </tr>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.matricule) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.matricule, {'attr' : 
                    {'placeholder':'Matricule', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.image) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.image) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.type)}}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.type, {'attr' : 
                    {'placeholder':'Vehicle Type', 'class':'text' }}) }}</td>
                </tr>
                <tr>
                    <td class="first" width="172">
                        <strong>{{ form_label(form.brand) }}</strong>
                    </td>
                    <td class="last">{{ form_widget(form.brand, {'attr' : 
                    {'placeholder':'Vehicle Brand', 'class':'text' }}) }}</td>
                </tr>
            </table>
            <br>
        <div class="btn-group btn-group-justified ">
                <div class="btn-group">
                    <a class="btn btn-success btn-xs glyphicon glyphicon-arrow-left" href="{{ path('stepOne') }}" >     Back</a>
                </div>
            <div class="btn-group">
                <button type="submit"class="btn btn-primary  btn-xs glyphicon glyphicon-pencil"> Next</button>
            </div>
        </div>

    </div>
</div>

        {{ form_end(form) }}
{% endblock %}

